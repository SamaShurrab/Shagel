<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity"
        android:background="@color/Snow">
        <View
            android:id="@+id/view"
            style="@style/Linearlayout_background"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/logo_shape"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="68dp"
                android:layout_height="78dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bahij_thesansarabic_bold"
            android:gravity="center"
            android:text="@string/app_name_job"
            android:textColor="@color/Viking"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bahij_thesansarabic_bold"
            android:text="@string/Text_View_site"
            android:textAlignment="center"
            android:textColor="@color/Matterhorn"
            android:textSize="14sp" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="23dp"
            android:background="@color/Solitude" />


        <ExpandableListView
            android:id="@+id/listView_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:minHeight="20dp"
            android:scrollbars="vertical"/>

        <View
            android:id="@+id/view115"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="23dp"
            android:background="@color/Solitude" />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

